<% if user_signed_in? %>
  <div class="search_form">
    <%= form_with url: search_path, local: true, method: :get do |f| %>
      <div class="row">
        <div class="col-md-3 mb-2">
          <%= f.text_field :word, placeholder: "検索キーワード", class: "form-control" %>
        </div>
        <div class="col-md-3 mb-2">
          <%= f.select :range, options_for_select([['ユーザー名', 'User'], ['お気に入り投稿', 'FavoritePost']]), { include_blank: '選択してください' }, { class: "form-control" } %>
        </div>
        <div class="col-md-3 mb-2">
          <%= f.select :search, options_for_select([["完全一致","perfect_match"], ["前方一致","forward_match"],  ["後方一致","backward_match"], ["部分一致","partial_match"]]), { include_blank: '検索方法を選択' }, { class: "form-control" } %>
        </div>
        <div class="col-md-3 mb-2 d-flex align-items-center">
          <%= f.submit "検索", class: "btn btn-primary w-100" %>
        </div>
      </div>
    <% end %>
  </div>
<% end %>
