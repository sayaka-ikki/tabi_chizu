<div class="container">
  <h1 class="text-center">ユーザー管理画面</h1>
  <div class="row justify-content-center">
    <div class="col">
      <%= image_tag @user.get_profile_image(400, 400) %>
    </div>

    <div class="col">
      <label>ユーザーID：<%= @user.id %></label><br>
      <label>ユーザー名：<%= @user.name %></label><br>
      <label>メールアドレス：<%= @user.email %></label><br>

      <% if @user.status %>
        <label>ステータス：退会</label><br>
        <%= link_to 'ステータスを有効にする', toggle_status_admin_user_path(@user), method: :patch, class: 'btn btn-primary' %>
      <% else %>
        <label>ステータス：有効</label><br>
        <%= link_to 'ステータスを退会にする', toggle_status_admin_user_path(@user), method: :patch, class: 'btn btn-danger' %>
      <% end %>
      <div>
        <td><%= link_to 'このユーザーを削除', admin_user_path(@user), method: :delete, class: 'btn btn-danger', data: { confirm: '本当に削除しますか？' } %></td>
      </div>

      <div>
        <%= link_to '全ユーザー一覧へ',admin_dashboards_path %>
      </div>
    </div>
  </div>
</div>