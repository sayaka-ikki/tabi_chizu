<h1>お気に入りスポット詳細</h1>

<div>
  <%= image_tag @favorite_post.get_favorite_post_image(100, 100) %>
  <p>スポット名：<%= @favorite_post.spot_name %></p>
  <p>カテゴリ：<%= @favorite_post.category %></p>
  <p>本文：<%= @favorite_post.body %></p>
  <p>ユーザーネーム：<%= @favorite_post.user.name %></p>
</div>

  <% if current_user == @favorite_post.user %>
    <%= link_to "編集",edit_favorite_post_path(@favorite_post.id) %>
    <%= link_to "削除",favorite_post_path(@favorite_post), method: :delete %>
  <% end %>

