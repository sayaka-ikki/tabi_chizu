<h1>お気に入りスポットを投稿！</h1>

<%= form_with model: @favorite_post do |f| %>
  <h4>スポット名</h4>
  <%= f.text_field :spot_name %>
  <h4>カテゴリ</h4>
  <%= f.text_field :category %>
  <h4>本文</h4>
  <%= f.text_area :body %>
  <h4>画像</h4>
  <%= f.file_field :image, accept: "image/*" %>
  <br><%= f.submit '投稿' %>
<% end %>
