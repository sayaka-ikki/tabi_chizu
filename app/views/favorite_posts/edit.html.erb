<div class="container">
  <div class="text-center">
    <h1>お気に入りスポット編集</h1>
  </div>

  <% if @favorite_post.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@favorite_post.errors.count, "error") %> prohibited this favorite post from being saved:</h2>
      <ul>
        <% @favorite_post.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="row justify-content-center">
    <div class="col-md-6">
      <%= form_with model: @favorite_post do |f| %>
        <div class="form-group">
          <%= f.label :spot_name, "スポット名", for: "inputSpotName" %>
          <%= f.text_field :spot_name, autofocus: true, id:"inputSpotName", placeholder:"スポット名", class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :category, "カテゴリ", for: "inputCategory" %>
          <%= f.text_field :category, autofocus: true, id:"inputCategory", placeholder:"カテゴリ", class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :body, "本文", for: "inputBody" %>
          <%= f.text_area :body, autofocus: true, id:"inputBody", placeholder:"本文", class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :favorite_post_image, "画像", for: "inputFavoritePostImage" %>
          <%= f.file_field :favorite_post_image, placeholder: "画像", accept: "image/*", class: "form-control-file" %>
        </div>
        <%= f.submit "変更を保存", class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>
