<h2>お気に入りスポット編集</h2>

<% if @favorite_post.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@favorite_post.errors.count, "error") %> prohibited this favorite post from being saved:</h2>
    <ul>
      <% @favorite_post.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_with model: @favorite_post do |f| %>
  <label for="inputSpotName">スポット名</label>
  <%= f.text_field :spot_name, autofocus: true, id:"inputSpotName", placeholder:"スポット名" %>
  <label for="inputCategory">カテゴリ</label>
  <%= f.text_field :category, autofocus: true, id:"inputCategory", placeholder:"カテゴリ" %>
  <label for="inputBody">本文</label>
  <%= f.text_field :body, autofocus: true, id:"inputBody", placeholder:"本文" %>
  <label for="inputFavoritePostImage">画像</label>
  <%= f.file_field :favorite_post_image, placeholder: "画像", accept: "image/*" %>
  <%= f.submit "変更を保存" %>
<% end %>