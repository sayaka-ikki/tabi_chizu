<h2>スケジュールの編集</h2>

<% if @schedule_post.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@schedule_post.errors.count, "error") %> prohibited this schedule post from being saved:</h2>
    <ul>
      <% @schedule_post.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_with model: @schedule_post do |f| %>
  <label for="inputTripTitle">旅のタイトル</label>
  <%= f.text_field :trip_title, autofocus: true, id:"inputTripTitle", placeholder:"旅のタイトル" %>
  <label for="inputShedulePostImage">画像</label>
  <%= f.file_field :schedule_post_image, placeholder: "画像", accept: "image/*" %>
  <label for="inputInventoryList">持ち物リスト</label>
  <%= f.text_area :inventory_list, autofocus: true, id:"inputInventoryList", placeholder:"持ち物リスト" %>
  <label for="inputLatitude">緯度</label>
  <%= f.text_field :latitude, autofocus: true, id:"inputLatitude", placeholder:"緯度" %>
  <label for="inputLongitude">経度</label>
  <%= f.text_field :longitude, autofocus: true, id:"inputLongitude", placeholder:"経度" %>


  <div>
    <%= f.fields_for :trip_itineraries do |trip_itinerary_form| %>

      <label for="inputSpotName">訪問先名</label>
      <%= trip_itinerary_form.text_field :spot_name, id:"inputSpotName" %>

      <label for="inputDateTime">日時</label>
      <%= trip_itinerary_form.text_field :date_time, id:"inputDateTime" %>

      <label for="inputBody">メモ</label>
      <%= trip_itinerary_form.text_area :body, id:"inputBody" %>

      <label for="inputLatitude">緯度</label>
      <%= trip_itinerary_form.text_field :latitude, id:"inputLatitude" %>

      <label for="inputLongitude">経度</label>
      <%= trip_itinerary_form.text_field :longitude, id:"inputLongitude" %>

    <% end %>
  </div>

  <%= f.submit "変更を保存" %>
<% end %>