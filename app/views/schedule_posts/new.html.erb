<h1>スケジュールを新規作成</h1>

<%= form_with model: @schedule_post do |f| %>
  <h4>旅のタイトル</h4>
  <%= f.text_field :trip_title %>
  <h4>画像</h4>
  <%= f.file_field :schedule_post_image, accept: "image/*" %>
  <h4>緯度</h4>
  <%= f.text_field :latitude %>
  <h4>経度</h4>
  <%= f.text_field :longitude %>
  <h4>持ち物リスト</h4>
  <%= f.text_area :inventory_list %>

  <div>
    <%= f.fields_for :trip_itineraries do |trip_itinerary_form| %>

      <%= trip_itinerary_form.label :spot_name, "スポット名" %>
      <%= trip_itinerary_form.text_field :spot_name %>

      <%= trip_itinerary_form.label :date_time, "日時" %>
      <%= trip_itinerary_form.text_field :date_time %>

      <%= trip_itinerary_form.label :body, "本文" %>
      <%= trip_itinerary_form.text_area :body %>

    <% end %>
  </div>

  <br><%= f.submit '投稿' %>
<% end %>
