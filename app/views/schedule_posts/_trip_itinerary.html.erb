<div class="nested-fields">
  <div class="card">
    <div class="card-body">
      <div class="form-group">
        <%= f.label :spot_name, "訪問先名" %>
        <%= f.text_field :spot_name, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :date_time, "日時" %>
        <%= f.text_field :date_time, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :body, "メモ" %>
        <%= f.text_area :body, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :latitude, "緯度" %>
        <%= f.text_field :latitude, class: "form-control" %>
      </div>
      <div class="form-group">
        <%= f.label :longitude, "経度" %>
        <%= f.text_field :longitude, class: "form-control" %>
      </div>
      <%= link_to_remove_association "Remove", f, class: "btn btn-danger" %>
    </div>
  </div>
</div>
